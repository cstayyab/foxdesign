{
  "manifest_version": 2,
  "name": "Fox Design",
  "version": "1.0",

  "description": "Enable or disable desing mode on active tab.",

  "icons": {
    "32": "icons/foxdesign-128.png"
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "ftp://*/*",
    "file://*/*",
    "activeTab"
  ],
  "background": {
    "scripts": ["foxdesign.js"]
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/foxdesign-128.png",
      "32": "icons/foxdesign-128.png"
    }
  }

}